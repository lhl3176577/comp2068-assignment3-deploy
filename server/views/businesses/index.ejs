<main class="container">
    <h1>Users</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/businesses/add" title="Add Contact Member"><i class="fa fa-plus-circle"></i> Add a new Business Contact List</a>
        </div> <!-- panel-heading -->
        <% if (businesses.length > 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>ContactName</th>
                        <th>ContactNumber</th>
                        <th>EmailAddress</th>
                        <th></th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < businesses.length; i++) { %>
                <tr>
                    <td>
                        <%= businesses[i].ContactName %>
                    </td>
                    <td>
                        <%= businesses[i].ContactNumber %>
                    </td>
                    <td>
                        <%= businesses[i].EmailAddress %>
                    </td>
                    
                    <td>
                        <a href="/businesses/<%= businesses[i]._id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/businesses/delete/<%= businesses[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
        <% } %>
    </div><!-- panel panel-default -->

</main>



